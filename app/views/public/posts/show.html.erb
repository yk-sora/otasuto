<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1><%= @post.name %></h1>
      <p><%= @post.introduction %></p>

      <% if @post.image.attached? %>
        <%= image_tag @post.image, class: "img-fluid" %>
      <% end %>

      <div class="mt-3">
        <%= link_to '投稿一覧に戻る', posts_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>

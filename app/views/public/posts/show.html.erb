<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1><%= @post.name %></h1>
      <p><%= @post.introduction %></p>

      <% if @post.image.attached? %>
        <%= image_tag @post.image, class: "img-fluid" %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'comment_list' %>

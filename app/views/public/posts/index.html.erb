<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>投稿一覧</h1>
      
      <% @posts.each do |post| %>
        <div class="mb-3">
          <h2><%= link_to post.name, post %></h2>
          <p><%= post.introduction.truncate(100) %></p>
        </div>
      <% end %>

      <div class="mt-3">
        <%= link_to '新規投稿', new_post_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>